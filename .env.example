npm_package_version=1.0.0

# ===========================================
# SMTP Configuration (E-mails)
# ===========================================
SMTP_PASS=**** # Password or authentication token for email
SMTP_USER=****@domain.com # Sender's email address

SMTP_PORT=587 # SMTP server port
SMTP_HOST=smtp.gmail.com # SMTP server address

SMTP_SECURE=false # Defines whether the connection should use SSL/TLS. `true` for 465, `false` for other ports
SMTP_FROM=****@domain.com # Email address that will appear as the sender
