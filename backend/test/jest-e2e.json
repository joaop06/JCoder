{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "preset": "ts-jest",
    "transform": {
        "^.+\\.(t|j)s$": ["ts-jest", {
            "tsconfig": {
                "experimentalDecorators": true,
                "emitDecoratorMetadata": true
            }
        }]
    },
    "moduleNameMapper": {
        "^src/(.*)$": "<rootDir>/../src/$1"
    },
    "transformIgnorePatterns": [
        "node_modules/(?!uuid|uuidv7)"
    ],
    "extensionsToTreatAsEsm": [],
    "setupFilesAfterEnv": [
        "<rootDir>/setup-e2e.ts"
    ],
    "testTimeout": 30000,
    "verbose": true,
    "forceExit": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "maxWorkers": 1,
    "detectOpenHandles": true
}